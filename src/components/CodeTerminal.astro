---
// src/components/CodeTerminal.astro
import { clipboardCopy } from 'clipboard-copy';
---

<div class="terminal-box" style="text-align: left;">
  <pre><code class="language-bash"><slot /></code></pre>
  <button class="copy-btn" onclick="navigator.clipboard.writeText(`{Astro.props.code}`)">
    Copy
  </button>
</div>

<style>
  .terminal-box {
    position: relative;
    background: #1e1e1e;
    color: #f8f8f8;
    border-radius: 6px;
    padding: 1rem;
    font-family: 'Courier New', monospace;
    margin: 1rem 0;
  }
  
  .copy-btn {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    background: #333;
    color: white;
    border: none;
    border-radius: 4px;
    padding: 0.25rem 0.5rem;
    cursor: pointer;
    font-size: 0.8rem;
  }
  
  .copy-btn:hover {
    background: #555;
  }
</style>
